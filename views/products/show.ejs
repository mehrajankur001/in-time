<style>
    a{
        text-decoration: none;
    }
</style>

<div class="container">
    <div class="card border-warning">
        <div class="card-header">
            <h5><%= product.trackingId %></h5>
        </div>
        <div class="card-body">
          <h4>Receiver</h4>
          <hr>
          <h5 class="card-title"><%= product.receiverName %> </h5>
          <h5 class="card-title">Nember: <a href="tel:<%= product.receiverNumber %>"><%= product.receiverNumber %></a> </h5>
          <p class="card-text">Address: <%= product.receiverAddress %>.</p>
          <hr>
          <h4>Sender</h4>
          <h5 class="card-title"><%= product.senderName %></h5>
          <h5 class="card-title"><a href="tel:<%= product.senderNumber %>"><%= product.senderNumber %></a></h5>
          <hr>
          <h5 class="card-title">Current Status: <%= product.currentStatus %></h5>
          <h3 class="card-title">OTP: <%= product.otpNumber %></h3>
        </div>
        <a href="/products/<%= product.id %>/editProductStatus ">
            <button class="btn btn-lg btn-warning w-100 mb-2">Update Status</button>
        </a>
        <a href="/products/<%= product.id %>/edit">
            <button class="btn btn-lg btn-warning w-100 mb-2">Edit</button>
        </a>
        <%- include('../partials/delete', {url: `/products/${product.id}`}) %> 
    </div>
</div><br><br>