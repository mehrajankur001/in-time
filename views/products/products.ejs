<div class="row mb-3">
    <div class="col">
        <form action="/products" method="GET">
        <div class="input-group mb-3">
            <label class="form-control">Receiver Name</label>
            <input class="form-control" type="text" name="receiverName" value="<%= searchOptions.receiverName %>">
        </div>
        <button class="btn btn-success w-100" type="submit">Search</button>
        </form>
    </div>
</div>

<div class="row">
    <% products.forEach(product =>{ %> 
        <div class="col-lg-3 col-md-6">
            <div class="card mb-3">
                <div class="card-header">
                    <h2><%= product.currentStatus %></h2>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Receciver: <%= product.receiverName %></li>
                    <li class="list-group-item">Sender: <%= product.senderName %></li>
                    <li class="list-group-item">Receiver Number: <%= product.receiverNumber %></li>
                    <li class="list-group-item">Current Status: <%= product.currentStatus %></li>
                </ul>
                <a href="/products/<%= product.id %>">
                    <button class="btn btn-lg w-100 btn-outline-warning mb-2">View Details</button>
                </a>
                <a href="/products/<%= product.id %>/editProductStatus ">
                    <button class="btn btn-lg btn-outline-warning w-100">Update Status</button>
                </a>
            </div>
        </div>
    <% }); %> 
</div>


