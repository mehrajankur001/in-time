
<div class="row mb-3">
    <div class="col">
        <form action="/products/<%= product.id %>/updateProductStatus?_method=PUT" method="post">
            <select name="currentStatus" class="form-select" aria-label="Default select example">
                <option label="Pcked Up" value="Picked Up">
                <option label="Left Facility" value="Left Facility">
                <option label="Out For Delevery" value="Out For Delevery">
              </select>
            <div class="btn-group">
                <button class="btn btn-lg btn-outline-dark">Update</button>
                <button class="btn btn-lg btn-outline-dark"><a href="/products">Cancel</a></button>
            </div>
        </form>
    </div>
</div>

<% if(locals.errorMessage != null) {%> 
    <div class="row mb-3">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2><%= errorMessage  %> </h2>
                </div>
            </div>
        </div>
    </div>
<% } %> 

<div class="row mb-2">
    <div class="col">
        <form action="/products/<%= product.id %>/updateProductStatus?_method=PUT" method="post">
            <div class="input-group mb-3">
                <label for="" class="form-control">OTP Number:</label>
                <input name="otpNumber" class="form-control" type="number">
            </div>
                <button class="btn btn-lg btn-outline-dark">Delevered</button>
                <button class="btn btn-lg btn-outline-dark"><a href="/products">Cancel</a></button>
            </div>
        </form>
    </div>
</div>


