<% if(locals.failedMessage == null){ %>
    <div class="row mb-2">
        <div class="col">
            <form action="/users/reset-password-p2" method="post">
                <div class="input-group mb-3">
                    <label for="" class="form-control">Enter Code:</label>
                    <input name="code" class="form-control" type="number">
                </div>
                <button type="submit" class="btn w-100 btn-dark mb-3">Submit</button>
                <a href="/users/reset-password-p1">
                    <button  class="btn w-100 btn-dark">change Email</button>
